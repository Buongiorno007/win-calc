.nav-menu(ng-controller="NavMenuCtrl as navMenu")
  header.nav-menu-header
    ul.items-list.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAV_LIST }}")
      li.item(ng-class="{'selected': navMenu.activeMenuItem == 1}", ng-click="navMenu.selectMenuItem(1)")
        .item-content
          span.nav-icon-addLocation.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_GEOLOCATION }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP) }}")

      li.item(ng-class="{'selected': navMenu.activeMenuItem == 2}", ng-click="navMenu.selectMenuItem(2)")
        .item-content
          span.nav-icon-geoLocation.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 2) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_CURRENT_GEOLOCATION }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 2) }}")

      li.item
        .item-content
          span.nav-icon-location.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 3) }}")
          span.title(data-output="{{ navMenu.O.order.customer_city }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 3) }}")

    .divider(data-output="{{ ::navMenu.NAVMENU_CALCULATIONS }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_DIVIDER }}")

    ul.items-list.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAV_LIST * 2.5 }}")
      li.item(ng-if="(navMenu.G.global.currOpenPage === 'history' && navMenu.G.global.isCreatedNewProject && navMenu.G.global.isCreatedNewProduct)", ng-class="{'selected': navMenu.activeMenuItem == 3}", ng-click="navMenu.selectMenuItem(3)")
        .item-content
          span.nav-icon-calculation.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 4)}}")
          span.title(data-output="{{ ::navMenu.NAVMENU_CURRENT_CALCULATION }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 4) }}")

      li.item(ng-show="navMenu.O.order.products.length && navMenu.G.global.currOpenPage === 'main'", ng-class="{'selected': navMenu.activeMenuItem == 4 || navMenu.G.global.isOpenedCartPage}", ng-click="navMenu.selectMenuItem(4)")
        .item-content
          span.nav-icon-basketOfCalculation.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 5) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_CART }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 5) }}")
          span.badge.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_ORDERS }}") {{ navMenu.O.order.products.length }}

      li.item(ng-class="{'selected': navMenu.activeMenuItem == 5}", ng-click="navMenu.selectMenuItem(5)")
        .item-content
          span.nav-icon-additionalComponents.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 6) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_ADD_ELEMENTS }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 6) }}")

      li.item(ng-class="{'selected': navMenu.activeMenuItem == 6 || navMenu.G.global.isOpenedHistoryPage}", ng-click="navMenu.selectMenuItem(6)")
        .item-content
          span.nav-icon-calculationsHistory.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 7) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_ALL_CALCULATIONS }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 7) }}")

    .divider(data-output="{{ ::navMenu.NAVMENU_APPENDIX }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_DIVIDER * 2 }}")

    ul.items-list.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAV_LIST * 4 }}")
      li.item(ng-class="{'selected': navMenu.activeMenuItem == 7}", ng-click="navMenu.selectMenuItem(7)")
        .item-content
          span.nav-icon-settings.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 8) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_SETTINGS }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 8) }}")

      li.item(ng-class="{'selected': navMenu.activeMenuItem == 8}", ng-click="navMenu.selectMenuItem(8)")
        .item-content
          span.nav-icon-information.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 9) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_MORE_INFO }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 9) }}")

      li.item(ng-if="navMenu.G.global.isDevice", ng-class="{'selected': navMenu.activeMenuItem == 9}", ng-click="navMenu.selectMenuItem(9)")
        .item-content
          span.nav-icon-voicehelp.unvisible(show-delay="{{ navMenu.config.DELAY_SHOW_NAVICON * (1 + navMenu.config.DELAY_SHOW_STEP * 10) }}")
          span.title(data-output="{{ ::navMenu.NAVMENU_VOICE_HELPER }}", typing="{{ navMenu.config.typing }}", typing-delay="{{ navMenu.config.DELAY_TYPE_NAVTITLE * (1 + navMenu.config.DELAY_SHOW_STEP * 10) }}")

  footer.nav-menu-footer
    button.new-calc.unvisible(ng-if="!navMenu.G.global.orderEditNumber", ng-click="navMenu.clickNewProject()", show-delay="{{ navMenu.config.DELAY_SHOW_NEWCALC_BTN }}") {{ ::navMenu.NAVMENU_NEW_CALC }}