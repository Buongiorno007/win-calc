.config-menu(ng-controller="ConfigMenuCtrl as configMenu")
  ul.items-list.unvisible(ng-if="configMenu.global.isConfigMenu", show-delay="{{ configMenu.config.DELAY_SHOW_CONFIG_LIST }}")

    li.item.item-header(ng-class="{'active': configMenu.global.activePanel == 1}", hm-tap="configMenu.selectConfigPanel(1)")
      .title(data-output="{{ 'mainpage.CONFIGMENU_CONFIGURATION' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .icon.unvisible(ng-if="configMenu.global.isConfigMenu", show-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
        svg-template(template="configMenu.product.templateIcon", template-width="configMenu.constants.svgTemplateIconWidth", template-height="configMenu.constants.svgTemplateIconHeight", type-construction="icon")
      .name(data-output="{{ 'mainpage.CONFIGMENU_SIZING' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .value(data-output="{{ configMenu.product.templateWidth }} {{ 'mainpage.MM' | translate }} *", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .value(data-output="{{ configMenu.product.templateHeight }} {{ 'mainpage.MM' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")

    li.item(ng-class="{'active': configMenu.global.activePanel == 2}", hm-tap="configMenu.selectConfigPanel(2)")
      .title(data-output="{{ 'mainpage.CONFIGMENU_PROFILE' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .value(data-output="{{ configMenu.product.profileName }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")

    li.item(ng-class="{'active': configMenu.global.activePanel == 3}", hm-tap="configMenu.selectConfigPanel(3)")
      .title(data-output="{{ 'mainpage.CONFIGMENU_GLASS' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .value(data-output="{{ configMenu.product.glassName }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")

    li.item(ng-class="{'active': configMenu.global.activePanel == 4}", hm-tap="configMenu.selectConfigPanel(4)")
      .title(data-output="{{ 'mainpage.CONFIGMENU_HARDWARE' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .value(data-output="{{ configMenu.product.hardwareName }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")

    li.item(ng-class="{'active': configMenu.global.activePanel == 5}", hm-tap="configMenu.selectConfigPanel(5)")
      .title(data-output="{{ 'mainpage.CONFIGMENU_LAMINATION' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .name(data-output="{{ 'mainpage.CONFIGMENU_LAMINATION_TYPE' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .value(data-output="{{ configMenu.product.laminationOutName }} / {{ configMenu.product.laminationInName }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")

    li.item(ng-class="{'active': configMenu.global.activePanel == 6}", hm-tap="configMenu.selectConfigPanel(6)")
      .title(data-output="{{ 'mainpage.CONFIGMENU_ADDITIONAL' | translate }}", typing="{{ configMenu.config.typing }}", typing-delay="{{ configMenu.config.DELAY_TYPE_ITEM_TITLE }}")
      .additional-items-list
        ul.additional-items-group(ng-repeat="addElementGroup in configMenu.product.chosenAddElements")
          li.additional-item(ng-repeat="addElement in addElementGroup", ng-init="dubleTyping()")
            span.value(data-output="") {{ addElement.elementName }}

  footer.menu-footer.unvisible(ng-if="configMenu.global.isConfigMenu", show-delay="{{ configMenu.config.DELAY_SHOW_FOOTER }}")
    price(price-value="configMenu.product.productPriceTOTAL", price-currency="configMenu.userInfo.currency")
    button.cart-btn(ng-if="!configMenu.global.productEditNumber", hm-tap="configMenu.inputProductInOrder()") {{ 'mainpage.CONFIGMENU_IN_CART' | translate }}
      .qty.unvisible(ng-if="configMenu.order.products.length > 0 && !configMenu.global.isCreatedNewProject", show-delay="{{ configMenu.config.DELAY_START }}") {{ configMenu.order.products.length }}
    button.cart-btn(ng-if="configMenu.global.productEditNumber", hm-tap="configMenu.inputProductInOrder()") {{ 'settings.SAVE' | translate }}

  .product-u-coeff.unvisible(ng-if="configMenu.global.isConfigMenu", ng-class="{'u-coeff-low': configMenu.product.heatTransferTOTAL < configMenu.order.currHeatTransfer}", show-delay="{{ configMenu.config.DELAY_SHOW_U_COEFF }}") U = {{ configMenu.product.heatTransferTOTAL }}
  .curtain(ng-show="configMenu.product.isAddElementsONLY")