section.settings.setting-page(ng-controller="SettingsCtrl")
  .header
    button.back(hm-tap="closeSettingsPage()")
    .title(data-output="{{ 'mainpage.NAVMENU_SETTINGS' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")

  .setting-container
    .setting-user-foto
      //img(ng-crs="global.AvatarUrl")
      .change-foto(hm-tap="changeAvatar()") {{ 'common_words.CHANGE' | translate }}

    .lists
      ul.list
        li.item
          .divider(data-output="{{ 'settings.AUTHORIZATION' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
        li.item
          .setting-item-label(data-output="{{ userInfo.phone }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
        li.item.click(hm-tap="gotoPasswordPage()")
          .setting-item-label(data-output="{{ userInfo.password }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change(data-output="{{ 'settings.CHANGE_PASSWORD' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_SHOW_ICONS }}")
        li.item.click(hm-tap="gotoLanguagePage()")
          .setting-item-label(data-output="{{ userInfo.langName }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change(data-output="{{ 'settings.CHANGE_LANGUAGE' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_SHOW_ICONS }}")

      ul.list
        li.item
          .divider(data-output="{{ 'settings.PRIVATE_INFO' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
        li#user-name.item.click(hm-tap="changeSettingData(1, $event)")
          .setting-item-label(data-output="{{ 'settings.USER_NAME' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-data(ng-hide="settings.selectedSetting == 1", data-output="{{ userInfo.name }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          input.set-input-txt(ng-show="settings.selectedSetting == 1", type="text", ng-model="userInfo.name", ng-keypress="saveChanges('user-name', userInfo.name)", ng-blur="saveChangesBlur('user-name', userInfo.name)")
        li.item.click(hm-tap="global.gotoLocationPage()")
          .setting-item-label(data-output="{{ 'settings.CITY' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-data(data-output="{{ userInfo.fullLocation }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change
        li#user-address.item.click(hm-tap="changeSettingData(3, $event)")
          .setting-item-label(data-output="{{ 'cart.CLIENT_ADDRESS' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-data(ng-hide="settings.selectedSetting == 3", data-output="{{ userInfo.city_phone }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          input.set-input-txt(ng-show="settings.selectedSetting == 3", type="text", ng-model="userInfo.city_phone", ng-keypress="saveChanges('user-address', userInfo.city_phone)", ng-blur="saveChangesBlur('user-address', userInfo.city_phone)")
        li#user-email.item.click(hm-tap="changeSettingData(4, $event)")
          .setting-item-label(data-output="{{ 'cart.CLIENT_EMAIL' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-data(ng-hide="settings.selectedSetting == 4", data-output="{{ userInfo.email }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          input.set-input-txt(ng-show="settings.selectedSetting == 4", type="email", name="mail", ng-model="userInfo.email", ng-keypress="saveChanges('user-email', userInfo.email)", ng-blur="saveChangesBlur('user-email', userInfo.email)", ng-change="changeEmail()")
          .set-email-error(ng-show="settings.isEmailError") {{ 'cart.WRONG_EMAIL' | translate }}

      ul.list
        li.item
          .divider(data-output="{{ 'settings.ADD_PHONES' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
        li.item(ng-repeat="phone in settings.addPhones")
          button.phone-btn.delete-phone(hm-tap="deletePhone($index)") &#8211;
          .setting-item-label(data-output="{{ phone }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
        li.item
          button.phone-btn.add-phone(hm-tap="appendInputPhone()") +
          .setting-item-label(ng-hide="settings.isInsertPhone", hm-tap="appendInputPhone()", data-output="{{ 'settings.INSERT_PHONE' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          input.set-input-phone(ng-show="settings.isInsertPhone", type="text", ng-model="settings.tempAddPhone", ng-keypress="saveChangesPhone()", ng-blur="cancelAddPhone()")
          .error-tooltip(ng-show="settings.isErrorPhone") {{ 'login.WRONG_NUMBER' | translate }}


      ul.list
        //li.item.click
          .setting-item-data(data-output="{{ 'mainpage.NAVMENU_VOICE_HELPER' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change
        li.item.click
          .setting-item-data(data-output="{{ 'settings.CLIENT_SUPPORT' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change
        li.item.click(hm-tap="logOut()")
          .setting-item-data(data-output="{{ 'settings.LOGOUT' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change