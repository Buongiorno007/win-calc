section.settings.setting-page
  .header
    button.back(hm-tap="settingsPage.closeSettingsPage()")
    .title(data-output="{{ 'mainpage.NAVMENU_SETTINGS' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")

  .setting-container
    .setting-user-foto(hm-tap="settingsPage.changeAvatar()")
      img(ng-src="{{ settingsPage.U.userInfo.avatarUrl }}" width="100%" height="100%")
      .change-foto {{ 'common_words.CHANGE' | translate }}

    .lists
      ul.list
        li.item
          .divider(data-output="{{ 'settings.AUTHORIZATION' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
        li.item
          .setting-item-label(data-output="{{ settingsPage.U.userInfo.phone }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
        li.item.click(hm-tap="settingsPage.gotoPasswordPage()")
          .setting-item-label(data-output="{{ settingsPage.U.userInfo.password }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-change(data-output="{{ 'settings.CHANGE_PASSWORD' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_SHOW_ICONS }}")
        li.item.click(hm-tap="settingsPage.gotoLanguagePage()")
          .setting-item-label(data-output="{{ settingsPage.U.userInfo.langName }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-change(data-output="{{ 'settings.CHANGE_LANGUAGE' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_SHOW_ICONS }}")

      ul.list
        li.item
          .divider(data-output="{{ 'settings.PRIVATE_INFO' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
        li#user-name.item.click(hm-tap="settingsPage.changeSettingData(1, $event)")
          .setting-item-label(data-output="{{ 'settings.USER_NAME' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-data(ng-hide="settingsPage.config.selectedSetting == 1", data-output="{{ settingsPage.U.userInfo.name }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          input.set-input-txt(ng-show="settingsPage.config.selectedSetting == 1", type="text", ng-model="settingsPage.U.userInfo.name", ng-keypress="settingsPage.saveChanges('user-name', settingsPage.U.userInfo.name)", ng-blur="settingsPage.saveChangesBlur('user-name', settingsPage.U.userInfo.name)")
        li.item.click(hm-tap="settingsPage.gotoLocationPage()")
          .setting-item-label(data-output="{{ 'settings.CITY' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-data(data-output="{{ settingsPage.U.userInfo.fullLocation }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-change
        li#user-address.item.click(hm-tap="settingsPage.changeSettingData(3, $event)")
          .setting-item-label(data-output="{{ 'cart.CLIENT_ADDRESS' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-data(ng-hide="settingsPage.config.selectedSetting == 3", data-output="{{ settingsPage.U.userInfo.city_phone }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          input.set-input-txt(ng-show="settingsPage.config.selectedSetting == 3", type="text", ng-model="settingsPage.U.userInfo.city_phone", ng-keypress="saveChanges('user-address', settingsPage.U.userInfo.city_phone)", ng-blur="saveChangesBlur('user-address', settingsPage.U.userInfo.city_phone)")
        li#user-email.item.click(hm-tap="settingsPage.changeSettingData(4, $event)")
          .setting-item-label(data-output="{{ 'cart.CLIENT_EMAIL' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-data(ng-hide="settingsPage.config.selectedSetting == 4", data-output="{{ settingsPage.U.userInfo.email }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          input.set-input-txt(ng-show="settingsPage.config.selectedSetting == 4", type="email", name="mail", ng-model="settingsPage.U.userInfo.email", ng-keypress="settingsPage.saveChanges('user-email', settingsPage.U.userInfo.email)", ng-blur="settingsPage.saveChangesBlur('user-email', settingsPage.U.userInfo.email)", ng-change="settingsPage.changeEmail()")
          .set-email-error(ng-show="settingsPage.config.isEmailError") {{ 'cart.WRONG_EMAIL' | translate }}

      ul.list
        li.item
          .divider(data-output="{{ 'settings.ADD_PHONES' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
        li.item(ng-repeat="phone in settingsPage.config.addPhones")
          button.phone-btn.delete-phone(hm-tap="settingsPage.deletePhone($index)") &#8211;
          .setting-item-label(data-output="{{ phone }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
        li.item
          button.phone-btn.add-phone +
          .setting-item-label(ng-hide="settingsPage.config.isInsertPhone", hm-tap="settingsPage.appendInputPhone()", data-output="{{ 'settings.INSERT_PHONE' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          input.set-input-phone(ng-show="settingsPage.config.isInsertPhone", type="text", ng-model="settingsPage.config.tempAddPhone", ng-keypress="settingsPage.saveChangesPhone()", ng-blur="settingsPage.cancelAddPhone()")
          .error-tooltip(ng-show="settingsPage.config.isErrorPhone") {{ 'login.WRONG_NUMBER' | translate }}


      ul.list
        //li.item.click
          .setting-item-data(data-output="{{ 'mainpage.NAVMENU_VOICE_HELPER' | translate }}", typing="{{ settings.typing }}", typing-delay="{{ settings.DELAY_START }}")
          .setting-item-change
        li.item.click
          .setting-item-data(data-output="{{ 'settings.CLIENT_SUPPORT' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-change
        li.item.click(hm-tap="settingsPage.logOut()")
          .setting-item-data(data-output="{{ 'settings.LOGOUT' | translate }}", typing="{{ settingsPage.config.typing }}", typing-delay="{{ settingsPage.config.DELAY_START }}")
          .setting-item-change