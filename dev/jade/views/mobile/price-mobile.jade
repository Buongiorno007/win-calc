.mobile-price(ng-controller="ConfigMenuCtrl as configMenu")
    .center-item
        .go-to-cart
            .go-to-cart-title#checkForAddElem(ng-click='configMenu.checkForAddElem()') {{configMenu.CONFIGMENU_IN_CART}}
        .add-to-basket-img
            img(src="img/basket-icon-2.svg", alt="")
    .flex-item(ng-if="!mobilePage.isSet(4)")
        .energy-coeff-and-discoint-price
            .energy-coeff-title Теплопередача
            .price-without-discount
                .gray-price {{ configMenu.P.product.product_price }}
                span.discount -{{ configMenu.U.userInfo.discountConstr }}%
        .energy-mark-and-price
            .energy-mark-title
                .product-u-coeff(ng-if="configMenu.U.userInfo.therm_coeff_id")
                    div R = {{ configMenu.P.product.heat_coef_total | number :2 }} {{ ::configMenu.LETTER_M}}&sup2;&deg;C/{{::configMenu.HEATCOEF_VAL }}
                .product-u-coeff(ng-if="!configMenu.U.userInfo.therm_coeff_id",  ng-class="{'coeff-low': configMenu.P.product.heat_coef_total > configMenu.O.order.heat_coef_min}")
                    div U = {{ configMenu.P.product.heat_coef_total | number :2 }} {{ ::configMenu.HEATCOEF_VAL}}/{{::configMenu.LETTER_M}}&sup2;&deg;C
            price(price-value="configMenu.G.global.tempPrice", price-currency="configMenu.U.userInfo.currency" ng-click='configMenu.checkForAddElem()' )