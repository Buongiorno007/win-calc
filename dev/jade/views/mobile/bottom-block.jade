.bottom-block
    .heat-coeff-txt
        span Оценка энергоэффективности
    .price-and-heat-coeff
        .expert-mark-row
            .expert-mark {{mobilePage.P.product.heat_coef_expert_mark}} -
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark < 6.1")
                span  Для балконов
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark> 6.1 && mobilePage.P.product.heat_coef_expert_mark <= 6.5")
                span  Достаточно хорошо
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark > 6.5 && mobilePage.P.product.heat_coef_expert_mark <= 7")
                span  Хорошо!
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark > 7 && mobilePage.P.product.heat_coef_expert_mark <= 7.5")
                span  Очень хорошо!
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark > 7.5 && mobilePage.P.product.heat_coef_expert_mark <= 8.2")
                span  Потрясающе!
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark > 8.2 && mobilePage.P.product.heat_coef_expert_mark <= 9")
                span  Превосходно!
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark > 9 && mobilePage.P.product.heat_coef_expert_mark <= 9.4")
                span  Великолепно!
            .title-rehau(ng-if="mobilePage.P.product.heat_coef_expert_mark > 9.4")
                span  Лучший выбор!
