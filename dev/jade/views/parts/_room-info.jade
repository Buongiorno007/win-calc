.room-info-container(ng-controller="RoomInfoCtrl", ng-class="{'show-comment': global.isShowCommentBlock}")
  .room-header
    .room-name {{ roomInfo.roomsData[(global.product.selectedRoomId-1)].name }}
      button.select-rooms.unvisible(show-delay="{{ roomInfo.DELAY_SHOW_ALLROOMS_BTN }}", ng-click="showRoomSelectorDialog()", ng-hide="global.isShowCommentBlock") {{ 'common_words.ALL' | translate }}

  .coeff-container
    .coeff-block
      .coeff.climate {{ global.currentGeoLocation.climaticZone }}
      .coeff-title(data-output="{{ 'mainpage.CLIMATE_ZONE' | translate }}", typing="{{ roomInfo.typing }}", typing-delay="{{ roomInfo.DELAY_SHOW_COEFF }}")
    .coeff-block
      .coeff.heat-transfer(ng-class="{'coeff-low': global.product.heatTransferTOTAL < global.currentGeoLocation.heatTransfer}") {{ global.product.heatTransferTOTAL }}
        .coeff-max {{ global.currentGeoLocation.heatTransfer }}
      .coeff-title(data-output="{{ 'mainpage.THERMAL_RESISTANCE' | translate }}", typing="{{ roomInfo.typing }}", typing-delay="{{ roomInfo.DELAY_SHOW_COEFF }}")
    .coeff-block
      .coeff.heat-exchange(ng-class="{'coeff-low': global.product.airCirculationTOTAL < roomInfo.roomsData[(global.product.selectedRoomId-1)].airCirculation}") {{ global.product.airCirculationTOTAL }}
        .coeff-max {{ roomInfo.roomsData[(global.product.selectedRoomId-1)].airCirculation }}
      .coeff-title(data-output="{{ 'mainpage.AIR_CIRCULATION' | translate }}", typing="{{ roomInfo.typing }}", typing-delay="{{ roomInfo.DELAY_SHOW_COEFF }}")

  .product-comment
    textarea.comment-field(ng-model="global.product.comment", placeholder="{{ 'mainpage.COMMENT' | translate }}")