form(name='searchForm')
  .search-block
    input.search-input(ng-show="!global.isHistoryPage", type="text", name="searching", ng-model="searchingWord", ng-change="checkChanges()", placeholder="{{ 'add_elements.INPUT_ADD_ELEMENT' | translate }}")
    input.search-input(ng-show="global.isHistoryPage", type="text", name="searching", ng-model="searchingWord", ng-change="checkChanges()", placeholder="{{ 'history.SEARCH_PLACEHOLDER' | translate }}")
    button.delete-search(ng-click="deleteSearchChart()")
    button.cancel-search(ng-show="!global.isHistoryPage && searchingWord", ng-click="cancelSearching()") {{ 'add_elements.CANCEL' | translate }}
    button.cancel-search(ng-show="global.isHistoryPage && history.isOrderSearch", ng-click="cancelSearching()") {{ 'add_elements.CANCEL' | translate }}