.service-calculator(ng-controller="Servi—ÅeCalclulatorCtrl as servCalc")
    .close-container
        .close#close(ng-click="servCalc.G.global.isServiceCalculator = 0" data-bind="click: function() {clearDisplay();}")
        .calculation-history(data-bind="text: calculatorHistory")
    .clear-container
        .AC-button(data-bind="click: clearDisplay")
            |AC
        input#calculatorDisplay.enter-field(data-bind="value: calculatorDisplay")
    .operation-button
        .divide(data-bind="click: function() {updateCalculatorDisplay('/'); }")
        .multiply(data-bind="click: function() {updateCalculatorDisplay('*'); }")
        .substract(data-bind="click: function() {updateCalculatorDisplay('-'); }")
        .add(data-bind="click: function() {updateCalculatorDisplay('+'); }")
        .backspace(data-bind="click: backspace")
    .digits
        input.seven(type="button" value="7" data-bind="click: function() {updateCalculatorDisplay('7'); }")
        input.eight(type="button" value="8" data-bind="click: function() {updateCalculatorDisplay('8'); }")
        input.nine(type="button" value="9" data-bind="click: function() {updateCalculatorDisplay('9'); }")
    .digits
        input.four(type="button" value="4" data-bind="click: function() {updateCalculatorDisplay('4'); }")
        input.five(type="button" value="5" data-bind="click: function() {updateCalculatorDisplay('5'); }")
        input.six(type="button" value="6" data-bind="click: function() {updateCalculatorDisplay('6'); }")
    .digits
        input.one(type="button" value="1" data-bind="click: function() {updateCalculatorDisplay('1'); }")
        input.two(type="button" value="2" data-bind="click: function() {updateCalculatorDisplay('2'); }")
        input.three(type="button" value="3" data-bind="click: function() {updateCalculatorDisplay('3'); }")
    .digits
        input.point(type="button" value="." data-bind="click: function() {updateCalculatorDisplay('.'); }")
        input.zero(type="button" value="0" data-bind="click: function() { updateCalculatorDisplay('0'); }")
        input.equally#equallyClick(type="button" value="=" data-bind="click: evaluateDisplay" ng-click="servCalc.evaluate()")
