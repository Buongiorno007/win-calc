.alert-overlay(ng-controller="AlertCtrl as alertBox", ng-show="alertBox.G.global.isAlert")
  .alert-block
    .alert-sign
    .alert-title {{ alertBox.G.global.alertTitle }}
    .alert-descr {{ alertBox.G.global.alertDescr }}
    .alert-btns
      button.alert-no(ng-click="alertBox.G.global.isAlert = 0") {{ 'common_words.BUTTON_N' | translate }}
      button.alert-yes(ng-click="alertBox.clickYes()") {{ 'common_words.BUTTON_Y' | translate }}
