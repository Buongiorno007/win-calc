.cart-dialogs.master-dialog(ng-class="{ 'unvisible' : !orderForm.C.cart.isMasterDialog }")
  .cart-dialogs-container
    form(name='callMasterForm', novalidate, ng-submit="orderForm.submitForm(callMasterForm)")
      .cart-dialog-header
        button.cart-dialog-tool.back(ng-click="orderForm.closeOrderDialog()", type="button")
        .cart-dialog-title {{ 'cart.CALL_MASTER' | translate }}
        button.save(type="submit") {{ 'cart.READY' | translate }}
      .cart-dialog-body
        .cart-dialog-descrip {{ 'cart.CALL_MASTER_DESCRIP' | translate }}

        .input-field(ng-class="{ 'has-error' : orderForm.C.cart.submitted && callMasterForm.name.$error.required }")
          input.user-field(type="text", name="name", ng-model="orderForm.C.cart.customer.customer_name", ng-focus="orderForm.C.cart.isCityBox = 0", placeholder="{{ 'cart.CLIENT_NAME' | translate }}", required)
          .error-tooltip(ng-show="orderForm.C.cart.submitted && callMasterForm.name.$error.required") {{ 'login.EMPTY_FIELD' | translate }}

        .input-field(ng-class="{ 'has-error' : orderForm.C.cart.submitted && callMasterForm.location.$error.required }")
          input.user-field(type="text", name="location", ng-model="orderForm.C.cart.customer.customer_location", ng-change="orderForm.changeLocation()", placeholder="{{ 'cart.CLIENT_LOCATION' | translate }}", autocomplete="off", required)
          .error-tooltip(ng-show='orderForm.C.cart.submitted && callCreditForm.location.$error.required') {{ 'login.EMPTY_FIELD' | translate }}
          ul.location-list-tooltip(ng-show="orderForm.C.cart.isCityBox")
            li.location-option(ng-repeat="location in orderForm.locations | locationFilter:orderForm.C.cart.customer.customer_location track by $index", ng-click="orderForm.selectCity(location)") {{location.fullLocation}}

        .input-field(ng-class="{ 'has-error' : orderForm.C.cart.submitted && callMasterForm.address.$error.required }")
          input.user-field(type="text", name="address", ng-model="orderForm.C.cart.customer.customer_address", ng-focus="orderForm.C.cart.isCityBox = 0", placeholder="{{ 'cart.CLIENT_ADDRESS' | translate }}", required)
          .error-tooltip(ng-show="orderForm.C.cart.submitted && callMasterForm.address.$error.required") {{ 'login.EMPTY_FIELD' | translate }}

        .input-field(ng-class="{ 'has-error' : orderForm.C.cart.submitted && callMasterForm.phone.$error.required }")
          input.user-field(type="tel", name="phone", ng-model="orderForm.C.cart.customer.customer_phone", ng-pattern="", ng-focus="orderForm.C.cart.isCityBox = 0", placeholder="{{ 'login.MOBILE' | translate }}", required)
          .error-tooltip(ng-show="orderForm.C.cart.submitted && callMasterForm.phone.$error.required") {{ 'login.EMPTY_FIELD' | translate }}
          .error-tooltip(ng-show="orderForm.C.cart.submitted && callMasterForm.phone.$error.pattern || callMasterForm.phone.$dirty && callMasterForm.phone.$error.pattern") {{ 'login.WRONG_NUMBER' | translate }}