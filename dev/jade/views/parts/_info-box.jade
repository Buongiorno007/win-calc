.info_container(ng-controller="infoBoxCtrl as infoBox", ng-class="{'active': infoBox.G.global.isInfoBox}")
  .info_box
    .info_box_inner
      img(ng-src="infoBox.G.global.infoImg")
      .info_title {{infoBox.G.global.infoTitle}}
      a.info_link(ng-href="infoBox.G.global.infoLink")
      .info_descrip {{infoBox.G.global.infoDescrip}}
    .close-dialog(hm-tap="infoBox.closeInfoBox()")