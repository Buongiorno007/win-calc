.grid-selector-dialog(ng-if="!elementsMenu.P.product.is_addelem_only", ng-class="{'active': elementsMenu.A.aux.isGridSelectorDialog}")
  .dialog-inner
    svg-template(template="elementsMenu.P.product.template", template-width="elementsMenu.constants.svgTemplateIconBigWidth", template-height="elementsMenu.constants.svgTemplateIconBigHeight", type-construction="setGlass")
  .set-grid-btn(hm-tap="elementsMenu.confirmGrid()")
  .set-grid-all-btn(hm-tap="elementsMenu.setGridToAll()") {{ 'mainpage.SELECT_ALL' | translate }}
  .set-grid-warning <span></span> {{ 'mainpage.SELECT_GLASS_WARN' | translate }}
  .close-dialog(hm-tap="elementsMenu.closeGridSelectorDialog()")
