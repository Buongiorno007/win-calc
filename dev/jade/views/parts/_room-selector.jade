.rooms-selector-dialog(ng-controller="RoomSelectorCtrl", ng-class="{'active': global.showRoomSelectorDialog}")
  .rooms-inner(ng-if="global.isRoomsDialog")
    .rooms-row
      .room-block
        .room-box.unvisible(show-delay="{{ roomData.DELAY_SHOW_ROOM1 }}", ng-class="{'selected': global.product.selectedRoomId === 1}", hm-tap="selectRoom(1)")
          .room-img.kitchen
            .room-title {{ 'mainpage.ROOM_KITCHEN' | translate }}
      .room-block
        .room-box.unvisible(show-delay="{{ roomData.DELAY_SHOW_ROOM2 }}", ng-class="{'selected': global.product.selectedRoomId === 2}", hm-tap="selectRoom(2)")
          .room-img.livingroom
            .room-title {{ 'mainpage.ROOM_LIVINGROOM' | translate }}
      .room-block
        .room-box.unvisible(show-delay="{{ roomData.DELAY_SHOW_ROOM3 }}", ng-class="{'selected': global.product.selectedRoomId === 3}", hm-tap="selectRoom(3)")
          .room-img.balcony
            .room-title {{ 'mainpage.ROOM_BALCONY' | translate }}
    .rooms-row
      .room-block
        .room-box.unvisible(show-delay="{{ roomData.DELAY_SHOW_ROOM4 }}", ng-class="{'selected': global.product.selectedRoomId === 4}", hm-tap="selectRoom(4)")
          .room-img.childroom
            .room-title {{ 'mainpage.ROOM_CHILDROOM' | translate }}
      .room-block
        .room-box.unvisible(show-delay="{{ roomData.DELAY_SHOW_ROOM5 }}", ng-class="{'selected': global.product.selectedRoomId === 5}", hm-tap="selectRoom(5)")
          .room-img.bedroom
            .room-title {{ 'mainpage.ROOM_BEDROOM' | translate }}
      .room-block
        .room-box.unvisible(show-delay="{{ roomData.DELAY_SHOW_ROOM6 }}", ng-class="{'selected': global.product.selectedRoomId === 6}", hm-tap="selectRoom(6)")
          .room-img.door
            .room-title {{ 'mainpage.ROOM_DOOR' | translate }}
    .close-dialog(hm-tap="closeRoomSelectorDialog()")