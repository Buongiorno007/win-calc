section.page-container(ng-class="{ 'swiped': !mainPage.G.global.isNavMenu }")
  section.left-side
    include menus/_navigation-menu
  section.right-side(
    ng-class="{'main-page-bg': mainPage.G.global.currOpenPage === 'main', 'main-room-bg': mainPage.G.global.currOpenPage === 'main'}")
    section.main-content(tabindex="0")
      include parts/_room-elements
      include parts/_main-svg
      include parts/_room-for-doors
      include parts/_interior_doors
      .main-svg-click(fs-click="mainPage.goToEditTemplate()")
      include parts/_user-info
      include parts/_report
      include parts/_room-info
      include parts/_room-selector
      include panels/_profiles
      include panels/_glasses
      include panels/_hardwares
      include panels/_laminations
      include panels/_add-elements
      include panels/_add-elements-list
      include parts/_grid-selector
      .backDarkView(ng-if="mainPage.G.global.isShowCommentBlock")
    section.right-menu
      include menus/_config-menu
      include menus/_addelems-menu
      .calculators-box.size-calculator(ng-class="[{'active': mainPage.G.global.isSizeCalculator}, mainPage.A.aux.calculatorStyle]")
        include parts/_size-calculator
      .calculators-box.qty-calculator(ng-class="[{'active': mainPage.G.global.isQtyCalculator}, mainPage.A.aux.calculatorStyle]")
        include parts/_qty-calculator
  include parts/_info-box
  include parts/_attantions
include parts/_loader
include parts/_alert
include parts/_danger-alert
include parts/_error-product
