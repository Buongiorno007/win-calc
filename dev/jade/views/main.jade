section.page-container(ng-class="{ 'swiped': !global.showNavMenu }")
  section.left-side
    include menus/_navigation-menu
  section.right-side.main-page-bg(ng-class="{'kitchen': global.product.selectedRoomId == 1, 'livingroom': global.product.selectedRoomId == 2, 'balcony': global.product.selectedRoomId == 3, 'childroom': global.product.selectedRoomId == 4, 'bedroom': global.product.selectedRoomId == 5, 'door': global.product.selectedRoomId == 6 }")
    section.main-content
      include parts/_user-info
      include parts/_room-info
      include parts/_room-selector
      //include parts/_voice

      include panels/_template-selector
      include panels/_profile
      include panels/_glass
      include panels/_hardware-window
      include panels/_lamination
      include panels/_add-elements
      include panels/_add-elements-list
      .backDarkView(ng-show="global.isShowCommentBlock")
    section.right-menu
      include menus/_config-menu
