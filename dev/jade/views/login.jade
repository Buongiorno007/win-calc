section.login-page
  //---------------- LogIn Form
  #login-container.login-container(ng-hide="loginPage.isRegistration", ng-mousedown="loginPage.isSendEmail = 0; loginPage.isUserNotExist = 0; loginPage.isUserNotActive = 0; loginPage.isUserPasswordError = 0;")
    .attantion(ng-hide="loginPage.isOnline || !loginPage.isOffline") {{ ::loginPage.OFFLINE }}
      button.inet_ok(ng-click="loginPage.closeOfflineAlert()") {{ ::loginPage.OK }}
    .attantion(ng-if="loginPage.isSendEmail") {{ ::loginPage.USER_CHECK_EMAIL }}
    .attantion(ng-if="loginPage.isUserNotExist") {{ ::loginPage.USER_NOT_EXIST }}
    .attantion(ng-if="loginPage.isUserNotActive") {{ ::loginPage.USER_NOT_ACTIVE }}
    .attantion(ng-if="loginPage.isUserPasswordError") {{ ::loginPage.USER_PASSWORD_ERROR }}
    .attantion(ng-if="loginPage.isStartImport") {{ ::loginPage.IMPORT_DB }}
    .logo
    form(name='loginForm', novalidate, ng-submit="loginPage.enterForm(loginForm)")
      .input-field(ng-class="{ 'has-error': loginPage.submitted && loginForm.phone.$error.required }")
        input.user-field(type="tel", name="phone", ng-model="loginPage.user.phone", ng-pattern="loginPage.regPhone", ng-minlength="6", placeholder="{{ ::loginPage.MOBILE }}", required)
        .error-tooltip(ng-show="loginPage.submitted && loginForm.phone.$error.required") {{ ::loginPage.EMPTY_FIELD }}
        .error-tooltip(ng-show="loginPage.submitted && loginForm.phone.$error.pattern || loginForm.phone.$dirty && loginForm.phone.$error.pattern") {{ ::loginPage.WRONG_NUMBER }}
        .error-tooltip(ng-show="loginPage.submitted && loginForm.phone.$error.minlength || loginForm.phone.$dirty && loginForm.phone.$error.minlength") {{ ::loginPage.SHORT_PHONE }}

      .input-field(ng-class="{ 'has-error' : loginPage.submitted && loginForm.password.$error.required }")
        input.user-field(type="password", name="password", ng-model="loginPage.user.password", ng-minlength="4", placeholder="{{ ::loginPage.PASSWORD }}", required)
        .error-tooltip(ng-show='loginPage.submitted && loginForm.password.$error.required') {{ ::loginPage.EMPTY_FIELD }}
        .error-tooltip(ng-show='loginPage.submitted && loginForm.password.$error.minlength || loginForm.password.$dirty && loginForm.password.$error.minlength') {{ ::loginPage.SHORT_PASSWORD }}

      button.login-submit(type="submit") {{ ::loginPage.ENTER }}
    button.login-submit(ng-click="loginPage.switchRegistration()") {{ ::loginPage.REGISTRATION }}

    //-------------- Factory List
    .factory_box(ng-show="loginPage.isFactoryId", ng-mousedown="loginPage.isFactoryNotSelect = 0;")
      .attantion(ng-show="loginPage.isFactoryNotSelect") {{ ::loginPage.SELECT_FACTORY }}
      button.close_dialog(type="button", ng-click="loginPage.closeFactoryDialog()")
      .factory_title {{ ::loginPage.SELECT_PRODUCER }}
      .factory_list
        table.factory_table
          tr.factory_item(ng-repeat="factory in loginPage.factories track by $index")
            td.factory_select
              input.radio-field(type="radio", name="factory", ng-model="loginPage.user.factoryId", ng-value="factory.id")
            td.factory_name {{ factory.name }}
            td.factory_place {{ factory.location }}
      button.login-submit(ng-click="loginPage.selectFactory()") {{ ::loginPage.SELECT }}


  //------------- Registration Form
