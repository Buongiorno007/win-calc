section.settings.password-page
  .header
    button.back(ng-click="passwordPage.gotoSettingsPage()")
    .title(data-output="{{ 'settings.CHANGE_PASSWORD' | translate }}", typing="{{ passwordPage.config.typing }}", typing-delay="{{ passwordPage.config.DELAY_START }}")
    button.save(ng-click="passwordPage.saveNewPassword()") {{ 'settings.SAVE' | translate }}

  .psw-container
    .lists
      form(name="passForm")
        ul.list
          li.item
            .psw-label(data-output="{{ 'settings.CURRENT_PASSWORD' | translate }}", typing="{{ passwordPage.config.typing }}", typing-delay="{{ passwordPage.config.DELAY_START }}")
            input.set-input-txt(type="password", name="oldPassword", ng-model="passwordPage.config.oldPassword", ng-minlength="3", ng-change="passwordPage.checkErrorOld()")
            .error-tooltip(ng-show="passForm.oldPassword.$dirty && passForm.oldPassword.$error.minlength") {{ 'login.SHORT_PASSWORD' | translate }}
            .error-tooltip(ng-show="passwordPage.config.isErrorOldPassword") {{ 'settings.NO_CONFIRM_PASS' | translate }}
          li.item
            .psw-label(data-output="{{ 'settings.NEW_PASSWORD' | translate }}", typing="{{ passwordPage.config.typing }}", typing-delay="{{ passwordPage.config.DELAY_START }}")
            input.set-input-txt(type="password", name="newPassword", ng-model="passwordPage.config.newPassword", ng-minlength="3")
            .error-tooltip(ng-show="passForm.newPassword.$dirty && passForm.newPassword.$error.minlength") {{ 'login.SHORT_PASSWORD' | translate }}
          li.item
            .psw-label(data-output="{{ 'settings.CONFIRM_PASSWORD' | translate }}", typing="{{ passwordPage.config.typing }}", typing-delay="{{ passwordPage.config.DELAY_START }}")
            input.set-input-txt(type="password", name="confirmPassword", ng-model="passwordPage.config.confirmPassword", ng-minlength="3", ng-change="passwordPage.checkError()")
            .error-tooltip(ng-show="passForm.confirmPassword.$dirty && passForm.confirmPassword.$error.minlength") {{ 'login.SHORT_PASSWORD' | translate }}
            .error-tooltip(ng-show="passwordPage.config.isErrorPassword") {{ 'settings.NO_CONFIRM_PASS' | translate }}
