section.settings.location-page
  .header
    button.back
    input.location-current(type="text", ng-model="userDefaultLocation")
    button.save(ng-click="global.gotoSettingsPage()") {{ 'add_elements.CANCEL' | translate }}
  .location-container
    .lists
      ul.list
        li.item.click(ng-repeat="location in locations | filter:userDefaultLocation", ng-click="selectCity(location.cityId)")
          .location-label {{location.fullLocation}}


