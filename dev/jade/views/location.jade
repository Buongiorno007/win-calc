section.settings.location-page
  .header
    button.back
    input.location-current(type="text", ng-model="location.currCity", ng-change="checkChanges()")
    button.save(ng-click="global.gotoMainPage()") {{ 'add_elements.CANCEL' | translate }}
  .location-container
    .lists
      ul.list
        li.item.click(ng-repeat="location in filteredCity", ng-click="selectCity($index)")
          .location-label {{location.city}}


