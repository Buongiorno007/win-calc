.config-panel.glass-container(ng-controller="GlassesCtrl as glassPanel" ng-class="{'active': glassPanel.G.global.activePanel == 3}")
  .glass-container
    .glass-block(ng-repeat="typeGlass in glassPanel.G.global.glasses track by $index" ng-class = "{gray : $index%2 === 0 }"  ng-init="FolderIndex = $index")
      .folder-img( ng-click="glassPanel.OpenGlassFolder($index)")
        img(ng-src="{{glassPanel.G.global.glassTypes[$index].img}}" id='anchor{{$index}}')
      .button(ng-click="glassPanel.OpenGlassFolder($index,$event)" ng-class="{'active': glassPanel.OpenFolder === FolderIndex }" )
        .info.folder-info(ng-show="glassPanel.G.global.glassTypes[$index].img.length || glassPanel.G.global.glassTypes[$index].link.length || glassPanel.G.global.glassTypes[$index].description.length", fs-click="glassPanel.showInfoBox(glassPanel.G.global.glassTypes[$index].id, glassPanel.G.global.glassTypes)")
          label i
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'en' && glassPanel.G.global.glassTypes[$index].translate.en") {{glassPanel.G.global.glassTypes[$index].translate.en}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'ru' && glassPanel.G.global.glassTypes[$index].translate.ru") {{glassPanel.G.global.glassTypes[$index].translate.ru}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'uk' && glassPanel.G.global.glassTypes[$index].translate.ua") {{glassPanel.G.global.glassTypes[$index].translate.ua}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'pl' && glassPanel.G.global.glassTypes[$index].translate.pl") {{glassPanel.G.global.glassTypes[$index].translate.pl}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'de' && glassPanel.G.global.glassTypes[$index].translate.de") {{glassPanel.G.global.glassTypes[$index].translate.de}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'bg' && glassPanel.G.global.glassTypes[$index].translate.bg") {{glassPanel.G.global.glassTypes[$index].translate.bg}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'it' && glassPanel.G.global.glassTypes[$index].translate.it") {{glassPanel.G.global.glassTypes[$index].translate.it}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'es' && glassPanel.G.global.glassTypes[$index].translate.es") {{glassPanel.G.global.glassTypes[$index].translate.es}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'ro' && glassPanel.G.global.glassTypes[$index].translate.ro") {{glassPanel.G.global.glassTypes[$index].translate.ro}}


        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'en' && !glassPanel.G.global.glassTypes[$index].translate.en") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'ru' && !glassPanel.G.global.glassTypes[$index].translate.ru") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'uk' && !glassPanel.G.global.glassTypes[$index].translate.ua") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'pl' && !glassPanel.G.global.glassTypes[$index].translate.pl") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'de' && !glassPanel.G.global.glassTypes[$index].translate.de") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'bg' && !glassPanel.G.global.glassTypes[$index].translate.bg") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'it' && !glassPanel.G.global.glassTypes[$index].translate.it") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'es' && !glassPanel.G.global.glassTypes[$index].translate.es") {{glassPanel.G.global.glassTypes[$index].name}}
        label.title(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }", ng-if="glassPanel.U.userInfo.langLabel === 'ro' && !glassPanel.G.global.glassTypes[$index].translate.ro") {{glassPanel.G.global.glassTypes[$index].name}}
        .arrow(ng-class="{'active': glassPanel.OpenFolder === FolderIndex }")

      .glass-folder(ng-if="glassPanel.OpenFolder === FolderIndex")
        .glass-item(ng-repeat="glass in typeGlass track by $index", ng-class="{'selected': glass.id == glassPanel.G.global.selectGlassId }" )
          .glass-width
            label {{glass.glass_width}} {{glassPanel.MM}}
          .title(ng-class="{'selected': glass.id == glassPanel.G.global.selectGlassId }" fs-click="glassPanel.selectGlass(glass.id, glass.sku, glass.glass_color)")
            label(ng-if="glassPanel.U.userInfo.langLabel === 'en'") {{glass.translate.en}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'ru'") {{glass.translate.ru}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'uk'") {{glass.translate.ua}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'pl'") {{glass.translate.pl}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'de'") {{glass.translate.de}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'bg'") {{glass.translate.bg}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'it'") {{glass.translate.it}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'es'") {{glass.translate.es}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'ro'") {{glass.translate.ro}}

            label(ng-if="glassPanel.U.userInfo.langLabel === 'en' && !glass.translate.en") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'ru' && !glass.translate.ru") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'uk' && !glass.translate.ua") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'pl' && !glass.translate.pl") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'de' && !glass.translate.de") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'bg' && !glass.translate.bg") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'it' && !glass.translate.it") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'es' && !glass.translate.es") {{glass.sku}}
            label(ng-if="glassPanel.U.userInfo.langLabel === 'ro' && !glass.translate.ro") {{glass.sku}}
          .info.item-info(ng-if="glass.img.length && glass.description.en", fs-click="glassPanel.showInfoBox(glass.id, typeGlass)")
            label i
          .blank-div(ng-if="!(glass.img.length && glass.description.en)")
  .glass-selector-dialog(ng-class="{'active': glassPanel.G.global.showGlassSelectorDialog}")
    .dialog-inner
      svg-template(template="glassPanel.P.product.template", template-width="glassPanel.constants.svgTemplateIconBigWidth", template-height="glassPanel.constants.svgTemplateIconBigHeight", type-construction="glassPanel.constants.SVG_ID_GLASS")
    .set-glass-btn(fs-click="glassPanel.confirmGlass()") {{glassPanel.APPLY}}
    .close-dialog(fs-click="glassPanel.closeGlassSelectorDialog(1)")
  .backDarkView(ng-if="glassPanel.G.global.showGlassSelectorDialog")
