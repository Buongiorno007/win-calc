.config-panel.lamination-container(ng-controller="LaminationCtrl as laminBox", ng-class="{'active': global.showPanels.showLaminationPanel}")
  .panel-inner(ng-if="global.isLaminationPanel")

    .lamination-block
      .lamination-title(data-output="{{ 'panels.LAMINAT_INSIDE' | translate }}", typing="{{ laminBox.config.typing }}", typing-delay="{{ laminBox.config.DELAY_START }}")

      .lamination-white.unvisible(show-delay="{{ laminBox.config.DELAY_START }}")
        .lamination-img(ng-class="{'selected': global.product.laminationInId === 'white'}", hm-tap="laminBox.selectLaminatIn('white')")
          img(src="img/lamination/empty.png")
        .lamination-label.for-white(data-output="{{ 'panels.LAMINAT_WHITE' | translate }}", typing="{{ laminBox.config.typing }}", typing-delay="{{ laminBox.config.DELAY_START }}")

      .lamination-options.clearfix

        .lam-option-box.unvisible(ng-repeat="laminatInner in laminBox.laminationsIn", show-delay="{{ laminBox.config.DELAY_START + (laminBox.config.DELAY_BLOCK * $index) }}")
          .lamination-img(ng-class="{'selected': global.product.laminationInId == laminatInner.id}", hm-tap="laminBox.selectLaminatIn($index)")
            img(ng-src="img/lamination/{{ laminatInner.id }}.png")
          .lamination-label(data-output="{{ laminatInner.name }}", typing="{{ laminBox.config.typing }}", typing-delay="{{ laminBox.config.DELAY_START + (laminBox.config.DELAY_TYPING * $index) }}")
          .info.unvisible(show-delay="{{ laminBox.config.DELAY_START + (laminBox.config.DELAY_BLOCK * 2 * $index) }}")

    .lamination-block
      .lamination-title(data-output="{{ 'panels.LAMINAT_OUTSIDE' | translate }}", typing="{{ laminBox.config.typing }}", typing-delay="{{ laminBox.config.DELAY_START }}")

      .lamination-white.unvisible(show-delay="{{ laminBox.config.DELAY_START }}")
        .lamination-img(ng-class="{'selected': global.product.laminationOutId === 'white'}", hm-tap="laminBox.selectLaminatOut('white')")
          img(src="img/lamination/empty.png")
        .lamination-label.for-white(data-output="{{ 'panels.LAMINAT_WHITE' | translate }}", typing="{{ laminBox.config.typing }}", typing-delay="{{ laminBox.config.DELAY_START }}")

      .lamination-options.clearfix

        .lam-option-box.unvisible(ng-repeat="laminatOuter in laminBox.laminationsOut", show-delay="{{ laminBox.config.DELAY_START + (laminBox.config.DELAY_BLOCK * $index) }}")
          .lamination-img(ng-class="{'selected': global.product.laminationOutId == laminatOuter.id}", hm-tap="laminBox.selectLaminatOut($index)")
            img(ng-src="img/lamination/{{ laminatOuter.id }}.png")
          .lamination-label(data-output="{{ laminatOuter.name }}", typing="{{ laminBox.config.typing }}", typing-delay="{{ laminBox.config.DELAY_START + (laminBox.config.DELAY_TYPING * $index) }}")
          .info.unvisible(show-delay="{{ laminBox.config.DELAY_START + (laminBox.config.DELAY_BLOCK * 2 * $index) }}")