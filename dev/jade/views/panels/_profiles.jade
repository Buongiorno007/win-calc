.config-panel.profile-container(ng-controller="ProfilesCtrl as profilesPanel", ng-class="{'active': profilesPanel.G.global.activePanel == 2}")
  .panel-inner(ng-if="profilesPanel.G.global.activePanel == 2")
    .profile-block.clearfix(ng-repeat="producer in profilesPanel.G.global.profiles", ng-class="{'selected': profilesPanel.P.product.profileTypeIndex == $index}")
      .group-block-header
        .title(data-output="{{ profilesPanel.G.global.profilesType[$index].name }}", typing="{{ profilesPanel.config.typing }}", typing-delay="{{ profilesPanel.config.DELAY_START }}")
        .group-info
          .info(ng-if="profilesPanel.G.global.profilesType[$index].img.length || profilesPanel.G.global.profilesType[$index].link.length || profilesPanel.G.global.profilesType[$index].description.length", hm-tap="profilesPanel.showInfoBox(profilesPanel.G.global.profilesType[$index].id, profilesPanel.G.global.profilesType)")
      .box.profile-box.unvisible(ng-repeat="profile in producer", ng-class="{'selected': profile.id == profilesPanel.P.product.profile.id}", show-delay="{{ profilesPanel.config.DELAY_START + (profilesPanel.config.DELAY_BLOCK * $index) }}")
        .box_inner(hm-tap="profilesPanel.selectProfile(profile.id)")
          .profile-box-top
            .type {{ profile.cameras }}
              ng-pluralize(count="profile.cameras",
              when="{'1':'{{ profilesPanel.config.camera }}', '2':'{{ profilesPanel.config.camer }}', '3':'{{ profilesPanel.config.camer }}', '4':'{{ profilesPanel.config.camer }}', 'other':'{{ profilesPanel.config.camers }}'}")

            .profile-descr(data-output="{{ profile.name }}", typing="{{ profilesPanel.config.typing }}", typing-delay="{{ profilesPanel.config.DELAY_START + (profilesPanel.config.DELAY_TYPING * $index) }}")
            .profile-country(data-output="{{ profile.country }}", typing="{{ profilesPanel.config.typing }}", typing-delay="{{ profilesPanel.config.DELAY_START + (profilesPanel.config.DELAY_TYPING * $index) }}")
            .label(data-output="{{ 'panels.COUNTRY' | translate }}", typing="{{ profilesPanel.config.typing }}", typing-delay="{{ profilesPanel.config.DELAY_START + (profilesPanel.config.DELAY_TYPING * $index) }}")
          .profile-box-bottom
            .coef-level.heat-insulation(ng-class="{'coef-level-1': profile.heat_coeff == 1, 'coef-level-2': profile.heat_coeff == 2, 'coef-level-3': profile.heat_coeff == 3, 'coef-level-4': profile.heat_coeff == 4}")
              .coef-index
              .coef-index
              .coef-index
              .coef-index
              .coef-index
            .label(data-output="{{ 'panels.HEAT_INSULATION' | translate }}", typing="{{ profilesPanel.config.typing }}", typing-delay="{{ profilesPanel.config.DELAY_START + (profilesPanel.config.DELAY_TYPING * $index) }}")
            .coef-level.noise-insulation(ng-class="{'coef-level-1': profile.noise_coeff == 1, 'coef-level-2': profile.noise_coeff == 2, 'coef-level-3': profile.noise_coeff == 3, 'coef-level-4': profile.noise_coeff == 4}")
              .coef-index
              .coef-index
              .coef-index
              .coef-index
              .coef-index
            .label(data-output="{{ 'panels.NOICE_INSULATION' | translate }}", typing="{{ profilesPanel.config.typing }}", typing-delay="{{ profilesPanel.config.DELAY_START + (profilesPanel.config.DELAY_TYPING * $index) }}")
        .info(ng-if="profile.img.length || profile.link.length || profile.description.length", hm-tap="profilesPanel.showInfoBox(profile.id, producer)")