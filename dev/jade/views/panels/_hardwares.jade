.config-panel.hardware-container(ng-controller="HardwaresCtrl as hardwarePanel", ng-class="{'active': hardwarePanel.G.global.activePanel == 4 && hardwarePanel.G.global.isSashesInTemplate}")
  .panel-inner(ng-if="hardwarePanel.G.global.activePanel == 4")

    .hardware-block(ng-repeat="producer in hardwarePanel.G.global.hardwares track by $index", ng-class="{'selected': glassPanel.P.product.hardwareTypeIndex == $index}")
      .group-block-header
        .hardware-title(data-output="{{ hardwarePanel.G.global.hardwareTypes[$index].name }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START }}")
        .group-info
          .info(ng-if="hardwarePanel.G.global.hardwareTypes[$index].img.length || hardwarePanel.G.global.hardwareTypes[$index].link.length || hardwarePanel.G.global.hardwareTypes[$index].description.length", fs-click="hardwarePanel.showInfoBox(hardwarePanel.G.global.hardwareTypes[$index].id, hardwarePanel.G.global.hardwareTypes)")

      .hardware-box.unvisible(ng-repeat="hardware in producer track by $index", ng-class="{'selected': hardware.id === hardwarePanel.P.product.hardware.id}", show-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_BLOCK * $index) }}")
        .info(ng-if="hardware.img.length || hardware.link.length || hardware.description.length", fs-click="hardwarePanel.showInfoBox(hardware.id, producer)")
        .hardware-box-inner(fs-click="hardwarePanel.selectHardware(hardware.id)")
          .hardware-box-view
            .hardware-logo
              img(ng-src="{{ hardware.img }}")
          .hardware-box-data
            .hardware-data-txt
              .hardware-descr(data-output="{{ ::hardware.name }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")
              .hardware-data
                .hardware-brand(data-output="{{ ::hardware.producer }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")
                .hardware-label(data-output="{{ ::hardwarePanel.BRAND }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")
              .hardware-data
                .hardware-brand(data-output="{{ ::hardware.country }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")
                .hardware-label(data-output="{{ ::hardwarePanel.COUNTRY }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")
            .hardware-data-coeff
              .coef-level.heat-insulation(ng-class="{'coef-level-1': hardware.heat_coeff == 1, 'coef-level-2': hardware.heat_coeff == 2, 'coef-level-3': hardware.heat_coeff == 3, 'coef-level-4': hardware.heat_coeff == 4}")
                .coef-index
                .coef-index
                .coef-index
                .coef-index
                .coef-index
              .hardware-label(data-output="{{ ::hardwarePanel.CORROSION_COEFF }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")
              .coef-level.noise-insulation(ng-class="{'coef-level-1': hardware.noise_coeff == 1, 'coef-level-2': hardware.noise_coeff == 2, 'coef-level-3': hardware.noise_coeff == 3, 'coef-level-4': hardware.noise_coeff == 4}")
                .coef-index
                .coef-index
                .coef-index
                .coef-index
                .coef-index
              .hardware-label(data-output="{{ ::hardwarePanel.BURGLAR_COEFF }}", typing="{{ hardwarePanel.config.typing }}", typing-delay="{{ hardwarePanel.config.DELAY_START + (hardwarePanel.config.DELAY_TYPING * $index) }}")