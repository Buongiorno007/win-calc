section.construction-page(ng-controller="ConstructionCtrl")
  section.construction-container

    .construction-left-menu
      ul.figure-lists
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==1}", ng-click="selectMenuItem(1)")
          .figure-icon.sash-shape
          .figure-label(data-output="{{ 'construction.SASH_SHAPE' | translate }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==2}", ng-click="selectMenuItem(2)")
          .figure-icon.angel-shape
          .figure-label(data-output="{{ 'construction.ANGEL_SHAPE' | translate }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==3}", ng-click="selectMenuItem(3)")
          .figure-icon.impost-shape
          .figure-label(data-output="{{ 'construction.IMPOST_SHAPE' | translate }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==4}", ng-click="selectMenuItem(4)")
          .figure-icon.arch-shape
          .figure-label(data-output="{{ 'construction.ARCH_SHAPE' | translate }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==5}", ng-click="selectMenuItem(5)")
          .figure-icon.position-shape
          .figure-label(data-output="{{ 'construction.POSITION_SHAPE' | translate }}")

      .left-menu-footer
        .footer-description(data-output="{{ 'construction.UNITS_DESCRIP' | translate }}")
        .project-default {{ 'construction.PROJECT_DEFAULT' | translate }}

    .construction-block

    .construction-right-menu
      .right-menu-header
        button.construct-tools.save-construction
        button.construct-tools.close-construction

      .door-config-menu
        button.door-config-btn(ng-class="{'active': constructData.showDoorConfig}", ng-click="getDoorConfig()")
        .door-config-label(data-output="{{ 'construction.DOOR_CONFIG_LABEL' | translate }}")
        .door-config-description(data-output="{{ 'construction.DOOR_CONFIG_DESCTIPT' | translate }}")

      .right-menu-footer
        .size-calculator
          include parts/_size-calculator

    section.door-configuration(ng-class="{'active': constructData.showDoorConfig}")

      .door-config-column.step1
        .door-config-header
          .door-inner
            .door-title 1 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_DOOR_TYPE' | translate }}
        .door-config-content
          ul.door-config-list
            li.door-config-option(ng-repeat="door in doorShape", ng-class="{'selected': constructData.selectedDoorShape === door.shapeId}", ng-click="selectDoor(door.shapeId)")
              .door-inner
                .door-option-icon
                  img(ng-src="{{ door.shapeIcon }}" ng-hide="constructData.selectedDoorShape === door.shapeId")
                  img(ng-src="{{ door.shapeIconSelect }}", ng-show="constructData.selectedDoorShape === door.shapeId")
                .door-option-label {{ door.shapeLabel }}

      .door-config-column.step2(ng-class="{'active': constructData.selectedStep1}")
        .door-config-header
          .door-inner
            .door-title 2 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_SASH_TYPE' | translate }}
        .door-config-content
          ul.door-config-list
            li.door-config-option(ng-repeat="sash in sashShape", ng-class="{'selected': constructData.selectedSashShape === sash.shapeId}", ng-click="selectSash(sash.shapeId)")
              .door-inner
                .door-option-label {{ sash.shapeLabel }}

      .door-config-column.step3(ng-class="{'active': constructData.selectedStep2}")
        .door-config-header
          .door-inner
            .door-title 3 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_HANDLE_TYPE' | translate }}
        .door-config-content
          ul.door-config-list
            li.door-config-option(ng-repeat="handle in handleShape", ng-class="{'selected': constructData.selectedHandleShape === handle.shapeId}", ng-click="selectHandle(handle.shapeId)")
              .door-inner
                .door-option-icon
                  img(ng-src="{{ handle.shapeIcon }}" ng-hide="constructData.selectedHandleShape === handle.shapeId")
                  img(ng-src="{{ handle.shapeIconSelect }}", ng-show="constructData.selectedHandleShape === handle.shapeId")
                .door-option-label {{ handle.shapeLabel }}

      .door-config-column.step4(ng-class="{'active': constructData.selectedStep3}")
        .door-config-header
          .door-inner
            .door-title 4 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_LOCK_TYPE' | translate }}
        .door-config-content
          ul.door-config-list
            li.door-config-option(ng-repeat="lock in lockShape", ng-class="{'selected': constructData.selectedLockShape === lock.shapeId}", ng-click="selectLock(lock.shapeId)")
              .door-inner
                .door-option-icon
                  img(ng-src="{{ lock.shapeIcon }}" ng-hide="constructData.selectedLockShape === lock.shapeId")
                  img(ng-src="{{ lock.shapeIconSelect }}", ng-show="constructData.selectedLockShape === lock.shapeId")
                .door-option-label {{ lock.shapeLabel }}


      .door-config-tools
        button.door-config-btn.close-door-config
        button.door-config-btn.save-door-config(ng-show="constructData.selectedStep4")
