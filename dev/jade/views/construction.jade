section.construction-page(ng-controller="ConstructionCtrl")
  section.construction-container

    .construction-left-menu
      ul.figure-lists
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==1}", hm-tap="selectMenuItem(1)")
          .figure-icon.sash-shape
          .figure-label(data-output="{{ 'construction.SASH_SHAPE' | translate }}", typing="{{ constructData.typing }}", typing-delay="{{ constructData.DELAY_SHOW_FIGURE_ITEM }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==2}", hm-tap="selectMenuItem(2)")
          .figure-icon.angel-shape
          .figure-label(data-output="{{ 'construction.ANGEL_SHAPE' | translate }}", typing="{{ constructData.typing }}", typing-delay="{{ constructData.DELAY_SHOW_FIGURE_ITEM }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==3}", hm-tap="selectMenuItem(3)")
          .figure-icon.impost-shape
          .figure-label(data-output="{{ 'construction.IMPOST_SHAPE' | translate }}", typing="{{ constructData.typing }}", typing-delay="{{ constructData.DELAY_SHOW_FIGURE_ITEM }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==4}", hm-tap="selectMenuItem(4)")
          .figure-icon.arch-shape
          .figure-label(data-output="{{ 'construction.ARCH_SHAPE' | translate }}", typing="{{ constructData.typing }}", typing-delay="{{ constructData.DELAY_SHOW_FIGURE_ITEM }}")
        li.figure-item(ng-class="{'selected': constructData.activeMenuItem==5}", hm-tap="selectMenuItem(5)")
          .figure-icon.position-shape
          .figure-label(data-output="{{ 'construction.POSITION_SHAPE' | translate }}", typing="{{ constructData.typing }}", typing-delay="{{ constructData.DELAY_SHOW_FIGURE_ITEM }}")

      .left-menu-footer
        .footer-description(data-output="{{ 'construction.UNITS_DESCRIP' | translate }}", typing="{{ constructData.typing }}", typing-delay="{{ constructData.DELAY_SHOW_FIGURE_ITEM }}")
        .project-default(hm-tap="setDefaultConstruction()") {{ 'construction.PROJECT_DEFAULT' | translate }}


    .construction-block
      .construction-scrollbox
        svg-template(template="templateDefaultTEMP", template-width="svgTemplateWidthTEMP", template-height="svgTemplateHeightTEMP", type-construction="edit")

    #sash-shape-menu.constr-shape-menu(ng-show="constructData.isSashEdit && constructData.isSashEditMenu")
      ul.constr-shape-list
        li.constr-shape-icon.sash-empty(hm-tap="insertNewSash('empty')")
        li.constr-shape-icon.sash-left(hm-tap="insertNewSash('left')")
        li.constr-shape-icon.sash-right(hm-tap="insertNewSash('right')")
        li.constr-shape-icon.sash-up(hm-tap="insertNewSash('up')")
        li.constr-shape-icon.sash-down(hm-tap="insertNewSash('down')")
        li.constr-shape-icon.sash-right-up(hm-tap="insertNewSash('up', 'right')")
        li.constr-shape-icon.sash-left-up(hm-tap="insertNewSash('up', 'left')")

    #impost-shape-menu.constr-shape-menu(ng-show="constructData.isImpostEdit && constructData.isImpostEditMenu")
      ul.constr-shape-list
        li.constr-shape-icon.sash-up(hm-tap="insertNewImpost('vert')")
        li.constr-shape-icon.sash-left(hm-tap="insertNewImpost('horis')")
        li.constr-shape-icon.sash-right-up(hm-tap="insertNewImpost('angel-top')")

    .construction-right-menu
      .right-menu-header
        button.construct-tools.save-construction(hm-tap="gotoMainPageSaved()")
        button.construct-tools.close-construction(hm-tap="gotoMainPageCancel()")

      .door-config-menu(ng-show="global.isConstructDoor")
        button.door-config-btn(ng-class="{'active': constructData.showDoorConfig}", hm-tap="getDoorConfig()")
        .door-config-label {{ 'construction.DOOR_CONFIG_LABEL' | translate }}
        .door-config-description {{ 'construction.DOOR_CONFIG_DESCTIPT' | translate }}: {{ constructData.doorShape }};
        .door-config-description {{ 'construction.SASH_CONFIG_DESCTIPT' | translate }}: {{ constructData.sashShape }};
        .door-config-description {{ 'construction.HANDLE_CONFIG_DESCTIPT' | translate }}: {{ constructData.handleShape }};
        .door-config-description {{ 'construction.LOCK_CONFIG_DESCTIPT' | translate }}: {{ constructData.lockShape }};

      .right-menu-footer
        .size-calculator(ng-class="{'active': global.isConstructSizeCalculator}")
          include parts/_size-calculator
        include parts/_voice


    section.door-configuration(ng-class="{'active': constructData.showDoorConfig}")

      .door-config-column.step1
        .door-config-backfon
        .door-config-header
          .door-inner
            .door-title 1 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_DOOR_TYPE' | translate }}
        .door-config-content(ng-class="{'scroll-box': !constructData.selectedStep2}")
          ul.door-config-list
            li.door-config-option(ng-repeat="door in doorShape", ng-class="{'selected': constructData.selectedDoorShape === $index}", hm-tap="selectDoor($index, door.shapeLabel)")
              .door-inner
                .door-option-icon
                  img.door-shape(ng-src="{{ door.shapeIcon }}" ng-hide="constructData.selectedDoorShape === $index")
                  img.door-shape(ng-src="{{ door.shapeIconSelect }}", ng-show="constructData.selectedDoorShape === $index")
                .door-option-label {{ door.shapeLabel }}
              .selected-item-arrow(ng-show="constructData.selectedDoorShape === $index")

      .door-config-column.step2(ng-class="{'active': constructData.selectedStep1}")
        .door-config-backfon
        .door-config-header
          .door-inner
            .door-title 2 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_SASH_TYPE' | translate }}
        .door-config-content(ng-class="{'scroll-box': !constructData.selectedStep3}")
          ul.door-config-list
            li.door-config-option(ng-repeat="sash in sashShape", ng-class="{'selected': constructData.selectedSashShape === $index}", hm-tap="selectSash($index, sash.shapeLabel)")
              .door-inner
                .door-option-label {{ sash.shapeLabel }}
              .selected-item-arrow(ng-show="constructData.selectedSashShape === $index")

      .door-config-column.step3(ng-class="{'active': constructData.selectedStep2}")
        .door-config-backfon
        .door-config-header
          .door-inner
            .door-title 3 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_HANDLE_TYPE' | translate }}
        .door-config-content(ng-class="{'scroll-box': !constructData.selectedStep4}")
          ul.door-config-list
            li.door-config-option(ng-repeat="handle in handleShape", ng-class="{'selected': constructData.selectedHandleShape === $index}", hm-tap="selectHandle($index, handle.shapeLabel)")
              .door-inner
                .door-option-icon
                  img.door-hardware(ng-src="{{ handle.shapeIcon }}" ng-hide="constructData.selectedHandleShape === $index")
                  img.door-hardware(ng-src="{{ handle.shapeIconSelect }}", ng-show="constructData.selectedHandleShape === $index")
                .door-option-label {{ handle.shapeLabel }}
              .selected-item-arrow(ng-show="constructData.selectedHandleShape === $index")

      .door-config-column.step4(ng-class="{'active': constructData.selectedStep3}")
        .door-config-backfon
        .door-config-header
          .door-inner
            .door-title 4 {{ 'construction.STEP' | translate }}
            .door-subtitle {{ 'construction.LABEL_LOCK_TYPE' | translate }}
        .door-config-content(ng-class="{'scroll-box': constructData.selectedStep3}")
          ul.door-config-list
            li.door-config-option(ng-repeat="lock in lockShape", ng-class="{'selected': constructData.selectedLockShape === $index}", hm-tap="selectLock($index, lock.shapeLabel)")
              .door-inner
                .door-option-icon
                  img.door-hardware(ng-src="{{ lock.shapeIcon }}" ng-hide="constructData.selectedLockShape === $index")
                  img.door-hardware(ng-src="{{ lock.shapeIconSelect }}", ng-show="constructData.selectedLockShape === $index")
                .door-option-label {{ lock.shapeLabel }}
              .selected-item-arrow(ng-show="constructData.selectedLockShape === $index")

      .door-config-tools
        button.door-config-btn.close-door-config(hm-tap="closeDoorConfig()")
        button.door-config-btn.save-door-config(ng-show="constructData.selectedStep4", hm-tap="saveDoorConfig()")